        maxElementsInMemory="100" overflowToDisk="true"
        diskPersistent="false" eternal="true" />
       <cache name="com.cyberlink.cosmetic.modules.common.model.Locale.query.getAvailableLocaleByType"
        maxElementsInMemory="100" eternal="false" timeToIdleSeconds="1800"
        timeToLiveSeconds="1800" overflowToDisk="false" diskPersistent="false"/>       
