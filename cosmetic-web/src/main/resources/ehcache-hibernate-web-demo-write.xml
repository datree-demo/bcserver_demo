             class="net.sf.ehcache.distribution.RMICacheReplicatorFactory"
             properties="replicateAsynchronously=true, replicatePuts=true, replicateUpdates=true,
             replicateUpdatesViaCopy=false, replicateRemovals=true "/>
       </cache>
        
</ehcache>

